# 定义回收站目录 
trash_path='.trash' 

# 判断 $trash_path 定义的文件是否存在，如果不存在，那么就创建 $trash_path. 
if [ ! -d $trash_path ]; then 
mkdir -p $trash_path 
fi 

# 定义别名：使用 rm 就调用 trash 
alias rm=trash 
alias trash=/bin/rm

# 使用 rl 就调用 'ls ~/.trash' 
# 如果更改上面的回收站目录这里的目录也需要修改 
alias rmll='ll ~/.trash' 

# 使用 unrm 就调用 restorefile，需要在删除目录的父目录下执行 
# alias unrm=restorefile 

# 使用 rmtrash 就调用 claearteash 
alias rmclear=cleartrash 

# 恢复文件的函数 
# restorefile() 
# { 
#  mv -i ~/.trash/$@ ./ 
# } 

# 删除文件的函数 
trash() 
{ 
for i in $*
do
  mv $i ~/.trash/$i`date +%%%F%%%T` 
done
} 

# 清空回收站的函数 
cleartrash() 
{ 
  echo -n "clear trash? [y/n]";
  read confirm;
  [ $confirm = 'y' ] || [ $confirm = 'Y' ] && /bin/rm -rf ~/.trash/* ;
} 

